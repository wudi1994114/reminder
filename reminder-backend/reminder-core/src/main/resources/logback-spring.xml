<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 定义日志输出目录，支持环境变量覆盖 -->
    <property name="LOG_HOME" value="${LOG_PATH:-/var/log/reminder}"/>
    
    <!-- 定义日志格式 -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n"/>
    
    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- 按小时滚动的文件输出 - 所有日志 -->
    <appender name="FILE_ALL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/reminder-core.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 按小时滚动 -->
            <fileNamePattern>${LOG_HOME}/reminder-core.%d{yyyy-MM-dd-HH}.log</fileNamePattern>
            <!-- 保存30天，每天24小时，共720个文件 -->
            <maxHistory>720</maxHistory>
            <!-- 总日志大小限制为10GB -->
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Spring框架日志 -->
    <logger name="org.springframework" level="INFO"/>
    
    <!-- Hibernate日志 -->
    <logger name="org.hibernate" level="WARN"/>
    
    <!-- 应用包日志 -->
    <logger name="com.core.reminder" level="DEBUG"/>
    <logger name="com.common.reminder" level="DEBUG"/>
    
    <!-- 开发环境配置 -->
    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE_ALL"/>
        </root>
    </springProfile>
    
    <!-- 生产环境配置 -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE_ALL"/>
        </root>
    </springProfile>
    
    <!-- 默认配置（当没有指定profile时） -->
    <springProfile name="!dev & !prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE_ALL"/>
        </root>
    </springProfile>
    
</configuration> 